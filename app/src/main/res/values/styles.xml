<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GameTitle" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginTop">140dp</item>
        <item name="layout_goneMarginTop">132dp</item>
        <item name="fontFamily">@font/sudbury_basin_3d</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">75dp</item>
    </style>

    <style name="Content">
        <item name="fontFamily">@font/lunchtime_doubly_so_regular</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>